#!/bin/bash
# {{- if eq .chezmoi.os "darwin" -}}

if [ -e "$(which gecho)" ]
then
  gecho -e "---- Start of ${TXT_BOLD}BREW${TXT_CLEAR} setup ----"
else
  echo "---- First time installing BREW... ----"
fi

if [ -e "$(which brewe)" ]; then
  echo "brew already installed"
else
  echo "Brew not found. Installing..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew bundle install -v --no-lock --file {{ joinPath .chezmoi.sourceDir "Brewfile" | quote }}
gecho -e "---- End of ${TXT_BOLD}BREW${TXT_CLEAR} setup ----"
# {{ end -}}
